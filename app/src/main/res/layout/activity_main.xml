<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="16dp"
            android:background="@drawable/rounded_bg">

            <TextView
                android:id="@+id/outputTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome via Z-Machine..."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp" />
        </ScrollView>

        <com.example.ifauto.MinimapView
            android:id="@+id/minimapView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_bg" />
            
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/micButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="ðŸŽ¤"
            android:textSize="24sp"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/commandEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Waiting for command..."
            android:inputType="none"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:background="@null"
            android:textSize="18sp"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/actionButtonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:tag="north"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North"
                android:layout_marginEnd="8dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:tag="south"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="South"
                android:layout_marginEnd="8dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:tag="east"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="East"
                android:layout_marginEnd="8dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:tag="west"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="West"
                android:layout_marginEnd="8dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:tag="look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Look"
                android:layout_marginEnd="8dp"/>

            <Button
                android:tag="inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inv"
                android:layout_marginEnd="8dp"/>

            <Button
                android:tag="up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up"
                android:layout_marginEnd="8dp"/>

            <Button
                android:tag="down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
